<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/current_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/low_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/current_temperature"
        android:layout_alignBottom="@id/current_temperature"
        android:layout_marginLeft="10sp"
        />

    <TextView
        android:id="@+id/high_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/low_temperature"
        android:layout_alignBottom="@id/low_temperature"
        android:layout_marginLeft="10sp"
        />

    <TextView
        android:id="@+id/current_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_temperature"
        android:layout_alignLeft="@id/current_temperature"
        android:layout_marginTop="10sp"
        />

    <TextView
        android:id="@+id/wind_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/current_condition"
        android:layout_alignBottom="@id/current_condition"
        android:layout_marginLeft="10sp"
        />

    <TextView
        android:id="@+id/update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_condition"
        android:layout_alignLeft="@id/current_condition"
        android:layout_marginTop="10sp"
        />

    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/update_time"
        android:layout_alignBottom="@id/update_time"
        android:layout_marginLeft="10sp"
        />

    <TextView
        android:id="@+id/aqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_time"
        android:layout_alignLeft="@id/update_time"
        android:layout_marginTop="10sp"
        />

    <TextView
        android:id="@+id/quality_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aqi"
        android:layout_alignLeft="@id/aqi"
        android:layout_marginTop="10sp"
        />

    <GridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:layout_below="@id/quality_level"
        android:layout_marginTop="10sp"
        ></GridView>

    <TextView
        android:id="@+id/wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid"
        android:layout_marginTop="10sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifi"
        android:layout_marginTop="10sp"
        android:gravity="center"
        />
</RelativeLayout>